namespace Menu_Buttons
{
	struct Button_Base
	{
		Button_Base();

		virtual void Draw();
		virtual void Update();

		int x,y;
		bool Hovering;//is mouse hovering over?
	};

	struct Button_Menu:public Button_Base
	{
		Button_Menu(std::string nShow,std::string nGoto,int nX,int nY); 
		Button_Menu();
		void Update();
		void Draw();

		std::string Go_To;
		std::string Show;
	};
	
	namespace Button_Var
	{					   
		struct Button_Bool:public Button_Base
		{
			void Update();
			void Draw();

			bool* Variable;
		};		  
		struct Button_UChar:public Button_Base
		{
			void Update();
			void Draw();

			u_char* Variable;
		};
		struct Button_UChar_Slider:public Button_Base
		{
			void Update();
			void Draw();

			u_char* Variable;
		};  
		struct Button_UInt:public Button_Base
		{
			void Update();
			void Draw();

			uint* Variable;
		};
		struct Button_UInt_Slider:public Button_Base
		{
			void Update();
			void Draw();

			uint* Variable;
		};
	}
}
